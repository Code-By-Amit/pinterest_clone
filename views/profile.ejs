<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Profile Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/profile.css">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
</head>

<body>

    <div class="containerpen">
        <div class="cardpen">
            <div>
                <div class="profile-picture">
                    <img src="https://i.pinimg.com/280x280_RS/fe/7d/ee/fe7deef834e1fafe56f8023ced803ca9.jpg"
                        alt="Profile Picture">
                </div>
                <h2 class="name">
                    <%= user.fullname %>
                </h2>
                <h3 class="username">
                    <%= user.email %>
                </h3>
                <p class="tagline">Lorem ipsum dolor sit amet, consectetur adipisicing.</p>
                <p class="description">Lorem ipsum dolor sit, amet consectetur adipisicing elit. Nisi.</p>
            </div>
            <div>

                <div class="box">
                    <form class="upload-form" action="/upload" method="post" enctype="multipart/form-data">
                        <h4>Upload Post</h4>
                        <label for="filecaption">Caption:</label>
                        <input type="text" id="filecaption" name="filecaption" placeholder="Enter Caption">
                        <label for="file">Choose File:</label>
                        <input type="file" id="file" name="file">
                        <button type="submit">Upload</button>
                </div>
               
                    <a href="/logout" class="button">Log out</a>
                    <a href="/feed" class="button">Go to Feed</a>
                    
                </div>
            </div>
    </div>

    <div class="ccontainer">
        <div class="ccards">
            <% user.posts.forEach(function(post){ %>
                <div class="card" style="width: 18rem;">
                    <img src="/images/uploads/<%= post.image %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= post.imagetext %>
                        </h5>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>